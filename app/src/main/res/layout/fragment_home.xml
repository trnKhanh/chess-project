<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    tools:context=".ui.home.HomeFragment">
    <androidx.cardview.widget.CardView
        android:layout_width="800px"
        android:layout_height="200px"
        android:layout_gravity="center"
        android:translationY="-40dp"
        app:cardCornerRadius="20dp">
        <Button
            android:id="@+id/button_start_detection"
            android:layout_width="match_parent"
            android:layout_height="240px"
            android:translationY="-20px"
            android:textSize="25dp"
            android:text="Start Detection"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:translationY="400dp"
        android:textColor="#F9F5FF"
        android:text="Explore more games:"
        android:textSize="25dp"/>
    <LinearLayout
        android:id="@+id/container_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:translationY="180dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="200px"
            android:layout_height="200px"
            app:cardCornerRadius="20dp"
            android:translationX="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/puzzle_icon"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:translationX="40dp"
            android:layout_width="200px"
            android:layout_height="200px"
            app:cardCornerRadius="20dp">
            <ImageView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/blind_puzzle_icon"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:translationX="60dp"
            android:layout_width="200px"
            android:layout_height="200px"
            app:cardCornerRadius="20dp">
            <ImageView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/evaluation_icon"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:translationX="80dp"
            android:layout_width="200px"
            android:layout_height="200px"
            app:cardCornerRadius="20dp">
            <ImageView
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/more_icon"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>