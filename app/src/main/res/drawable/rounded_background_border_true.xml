<!-- res/drawable/rounded_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="#FFFFFF" /> <!-- Set your background color here (white) -->
        </shape>
    </item>

    <item android:right="1dp" android:left="1dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Same radius as the background -->
            <stroke android:width="2dp" android:color="#0C4CA8" />
        </shape>
    </item>
</layer-list>